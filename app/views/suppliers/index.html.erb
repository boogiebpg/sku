<h3>Suppliers List</h3>

<% if @suppliers.count > 0 %>
  <table class='table table-striped table-bordered'>

    <thead>
      <tr>
        <th>
          Code
        </th>
        <th>
          Name
        </th>
      </tr>
    </thead>

    <tbody class='list'>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td>
            <%= supplier.id %>
          </td>
          <td>
            <%= supplier.name %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <%== pagy_nav_bootstrap(@pagy) %>
  </p>
<% else %>
  <p>
    No suppliers in DB.
  </p>
<% end %>
